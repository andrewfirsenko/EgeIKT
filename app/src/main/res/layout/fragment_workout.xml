<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frg_workout__card_create_test"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:elevation="2dp"
        android:background="@drawable/background_block"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/frg_workout__full_test_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frg_workout__full_test_title"
            android:textSize="24sp"
            android:paddingTop="12dp"
            android:paddingBottom="20dp"
            android:textColor="@color/color_text_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/frg_workout__two_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frg_workout__two_part"
            android:padding="4dp"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frg_workout__full_test_title" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/frg_workout__two_part"
            app:layout_constraintTop_toBottomOf="@id/frg_workout__full_test_title" />

        <Button
            android:id="@+id/frg_workout__btn_begin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Начать"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frg_workout__two_part" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_create_my_test"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/button_background_light"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frg_workout__btn_begin" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:elevation="6dp"
        android:background="@drawable/background_block"
        app:layout_constraintTop_toBottomOf="@id/frg_workout__card_create_test">

        <TextView
            android:id="@+id/frg_workout__task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_task"
            android:textSize="24sp"
            android:paddingTop="12dp"
            android:paddingBottom="20dp"
            android:textColor="@color/color_text_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/frg_workout__btn_begin_task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Начать"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frg_workout__task_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>